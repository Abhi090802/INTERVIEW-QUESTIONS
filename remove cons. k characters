// TC=O(N) SC=O(2*N) FOR STACK 
string remove_k_char(int k, string s)
    {
        if (k == 1)
            return "";
        string output = "";
        stack<pair<char, int> > stk;
 
        for (int i = 0; i < s.length(); i++) {
            if (stk.empty() == true) {
                stk.push({s[i], 1});
            }
            else {
                if (s[i] == (stk.top()).first) {
                    stk.push(
                        { s[i], stk.top().second + 1 });
                    if (stk.top().second == k) {
                        int x = k;
                        while (x) {
                            stk.pop();
                            x--;
                        }
                    }
                }
                else{
                    stk.push(make_pair(s[i], 1));
                }
            }
        }
